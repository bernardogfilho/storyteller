
<section class="projects">
  <% unless @projects.empty? %>
  <aside class="projects__info">
    <h2>Projects</h2>
    <p>This is where I will write about this page section, where you can add, edit and access projects and etc.</p>
    <%= link_to 'Add Project', new_project_path, :class => "projects__add-project-button" %>
    <div class="clear">&nbsp;</div>
    <h4 class="projects__updates-title">Last Updates</h4>
    <ul class="projects__updates-list">
      <li>Edited the title of <a href="#">Pinwork</a>.</li>
      <li>Removed an <a href="#">user story</a> in <a href="#">Bank Jobs</a>.</li>
      <li>Edited an <a href="#">user story</a> in <a href="#">Pinwork</a>.</li>   
      <li>Created a new <a href="#">user story</a> in <a href="#">Bank Jobs</a>.</li>
      <li>Started a new project named <a href="#">Bank Jobs</a>.</li> 
      <li><a href="#">More updates...</a></li>  


    </ul>
  </aside>
  <div class="projects__list">    
    <table class="projects__table">
      <% @projects.each do |project| %>
      <tr>
        <td class="project__title"><%= project.title %></td>
        <td><%= project.description %></td>
        <td>
          <%= link_to project do %>
            <span class="label">
              <% if project.user_stories.count > 0 %>
              <%= pluralize(project.user_stories.count, "user story") %>
              <% else %>
              no user stories
              <% end %>
            </span>
          <% end %>
        </td>
        <td>
          <div class="project__action-buttons">
            <%= link_to ('<i class="icon-search"></i>').html_safe, project, :class => "project__action-button" %>
            <%= link_to ('<i class="icon-pencil"></i>').html_safe, edit_project_path(project), :class => "project__action-button" %>
            <%= link_to ('<i class="icon-trash"></i>').html_safe, project, :method => "delete", :confirm => "Are you sure?", :class => "project__action-button" %>
          </div>
        </td>
      </tr>
      <% end %>
    </table>
  <br>
  </div>
  <% end %>
</section>


<br />

