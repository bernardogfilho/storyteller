<%= form_for(@project) do |f| %>
    <div class="form-horizontal__field">
      <div class="form-horizontal__label">
        <%= f.label :title %>
      </div>
      <%= f.text_field :title, :class => "form-horizontal__input" %>
      <span class="form-horizontal__info">Title of the project.</span>
    </div>
    <div class="form-horizontal__field">
      <div class="form-horizontal__label">
        <%= f.label :description %>
      </div>
      <%= f.text_field :description, :class => "form-horizontal__input" %>
      <span class="form-horizontal__info">A little description of the project.</span>
    </div>
    <div class="form-horizontal__field--submit">

      <%= f.submit "Criar Projeto", :class => "form-horizontal__submit"%>
    </div>
<% end %>
