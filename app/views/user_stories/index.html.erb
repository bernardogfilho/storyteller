<h1>Listing user_stories</h1>

<table>
  <tr>
    <th>Actor</th>
    <th>Action</th>
    <th>Goal</th>
    <th>Project</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @user_stories.each do |user_story| %>
  <tr>
    <td><%= user_story.actor %></td>
    <td><%= user_story.action %></td>
    <td><%= user_story.goal %></td>
    <td><%= user_story.project.title %></td>
    <td><%= link_to 'Show', project_user_story_path(@project, user_story) %></td>
    <td><%= link_to 'Edit', edit_project_user_story_path(@project, user_story) %></td>
    <td><%= link_to 'Destroy', project_user_story_path(@project, user_story), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

