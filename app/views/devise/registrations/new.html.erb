<div class="wrapper">
	<section class="sign-up">
		
		<h2>Sign up</h2>

		<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
		  <%= devise_error_messages! %>
			
			<div class="form-horizontal__field">
		  	<div class="form-horizontal__label">
		  		<%= f.label :email %>
		  	</div>
		  	<%= f.email_field :email, :class => "form-horizontal__input" %>
			</div>

			<div class="form-horizontal__field">
				<div class="form-horizontal__label">
		  		<%= f.label :password %>
				</div>
		  	<%= f.password_field :password, :class => "form-horizontal__input" %>
			</div>

			<div class="form-horizontal__field">
				<div class="form-horizontal__label">
		  		<%= f.label :password_confirmation %>
				</div>
			  <%= f.password_field :password_confirmation, :class => "form-horizontal__input" %>
			</div>

			<div class="form-horizontal__field--submit">
				<%= f.submit "Sign up", :class => "form-horizontal__submit" %>
			</div>

		<% end %>

		<%= render :partial => "devise/shared/links" %>
	</section>
	
</div>
